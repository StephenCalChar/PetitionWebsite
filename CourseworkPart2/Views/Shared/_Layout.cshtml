<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Petition Site</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    <!--Sharing buttons-->
    <script type="text/javascript" src="//platform-api.sharethis.com/js/sharethis.js#property=5ad5e8ecd0b9d300137e3a0f&product=inline-share-buttons"></script>
    <script defer src="https://use.fontawesome.com/releases/v5.0.6/js/all.js"></script>
    <link rel= "stylesheet" href = "~/Content/style.css">
</head>
<body>
    <div class="jumbotron" style="margin-bottom: 0px;">
        <h1>Vote With Your Wallet </h1>
        <p> Create Some Change </p>
        <img src="~/Images/vote.png" class="img-fluid" alt="Company Logo" id="jumImg">
    </div>

    <!-- start of navbar choose between fixed-top sticky-top and fixed-bottom -->
    <nav class="navbar navbar-expand-md navbar-dark bg-danger">



        <button class="navbar-toggler" data-toggle="collapse" data-target="#collapse_here">
            <span class="navbar-toggler-icon"> </span>
        </button>

        <!-- start of collapsable content -->
        <div class="collapse navbar-collapse" id="collapse_here">


            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="~/Home/index">Home</a>
                </li>


                <li>
                    <a class="nav-link" href="/Cause/SearchCause">Find Petitions</a>
                </li>

                <li>
                    <a class="nav-link" href="/Cause/NewCause" >Start A Petition</a>
                </li>
                <!--2 menu links which switch depending on if there has been a session created and a member is logged in-->
                @if (Session["MemberId"] == null)
                {
                    <!--If a member is not logged in display sign up and register-->
                    <li class="nav-item" id="signUpIcon"><a href="/Member/Register" class="nav-link"><i class="fas fa-user-plus"></i> Sign Up</a></li>
                    <li class="nav-item" id="signInIcon"><a href="/Member/Login" data-backdrop="static" class="nav-link"><i class="fas fa-sign-in-alt"></i> Login</a></li>

                }
                else
                {
                    string memberId = Session["MemberId"].ToString();
                    <!--If a member is logged in display a profile link and a log out link-->
                    <li class="nav-item" id="signUpIcon"><a href="/Member/MemberProfile/@memberId" data-backdrop="static" class="nav-link"> <i class="fas fa-user"></i> @Session["Username"].ToString()</a></li>
                    <li class="nav-item" id="registerIcon"><a href="/Member/LogOut" data-backdrop="static" class="nav-link"><i class="fas fa-sign-in-alt"></i> Log Out</a></li>

                }


            </ul>

        </div>
    </nav>
    <!--End of navbar -->








    <div class="container-fluid body-content">
        @RenderBody()
    </div>



    <!--keep these scripts here so they load last-->
    
    @Scripts.Render("~/bundles/bootstrap")
    <!--Load on script last-->
    @Scripts.Render("/Scripts/myscript.js")

    @RenderSection("scripts", required: false)
</body>
</html>
